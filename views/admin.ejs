<style>
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap');

:root{
  --bg:#050505;
  --glass:rgba(255,255,255,0.08);
  --border:rgba(255,255,255,0.15);
  --text:#eaeaea;
}

*{box-sizing:border-box}

body{
  margin:0;
  font-family:'Inter',sans-serif;
  background:
    linear-gradient(120deg,#000,#050505,#000),
    radial-gradient(circle at top left,#222,#000);
  color:var(--text);
  padding:30px;
  overflow-x:hidden;
}

/* RGB ARKAPLAN AKIÅž */
body::before{
  content:"";
  position:fixed;
  inset:-50%;
  background:
    linear-gradient(90deg,
      #ff00cc,
      #3333ff,
      #00ffe0,
      #00ff6a,
      #ffee00,
      #ff8800,
      #ff0055,
      #ff00cc
    );
  background-size:600% 600%;
  animation:rgbFlow 20s linear infinite;
  opacity:.18;
  filter:blur(120px);
  z-index:-1;
}

@keyframes rgbFlow{
  0%{background-position:0% 50%}
  100%{background-position:100% 50%}
}

.container{
  max-width:1200px;
  margin:auto;
}

/* CAM KART */
.card{
  background:var(--glass);
  border:1px solid var(--border);
  border-radius:18px;
  padding:25px;
  margin-bottom:30px;
  backdrop-filter:blur(18px);
  box-shadow:0 0 40px rgba(0,0,0,.6);
  transition:.4s;
}

.card:hover{
  box-shadow:
    0 0 25px rgba(0,255,255,.25),
    0 0 45px rgba(255,0,255,.25);
}

/* HEADER */
.header-row{
  display:flex;
  justify-content:space-between;
  align-items:center;
  margin-bottom:15px;
  border-bottom:1px solid var(--border);
  padding-bottom:12px;
}

h1{
  margin:0;
  font-size:1.7rem;
  font-weight:800;
  background:linear-gradient(90deg,#00ffe0,#ff00ff,#00ff6a);
  -webkit-background-clip:text;
  -webkit-text-fill-color:transparent;
}

h2{
  font-size:1.1rem;
  margin-bottom:15px;
  color:#cfcfcf;
}

/* BUTONLAR */
.backup-actions{display:flex;gap:12px}

.btn-backup{
  padding:10px 18px;
  border-radius:999px;
  font-weight:700;
  background:linear-gradient(90deg,#00ffe0,#ff00ff,#00ff6a);
  color:#000;
  border:none;
  cursor:pointer;
  text-decoration:none;
  transition:.3s;
}

.btn-backup:hover{
  transform:scale(1.07);
  box-shadow:0 0 25px rgba(0,255,255,.8);
}

/* FORM */
.form-row{
  display:flex;
  gap:15px;
  flex-wrap:wrap;
  align-items:flex-end;
}

.form-group{
  display:flex;
  flex-direction:column;
}

label{
  font-size:.75rem;
  opacity:.7;
  margin-bottom:4px;
}

input,select{
  background:rgba(0,0,0,.5);
  border:1px solid var(--border);
  color:#fff;
  padding:10px;
  border-radius:10px;
  transition:.3s;
}

input:focus,select:focus{
  outline:none;
  border-color:#00ffe0;
  box-shadow:0 0 15px rgba(0,255,255,.6);
}

button{
  padding:10px 22px;
  border-radius:999px;
  border:none;
  font-weight:700;
  cursor:pointer;
  background:linear-gradient(90deg,#00ffe0,#ff00ff);
  color:#000;
  transition:.3s;
}

button:hover{
  transform:scale(1.1);
  box-shadow:0 0 30px rgba(255,0,255,.9);
}

.update-btn{
  padding:8px 16px;
  font-size:.85rem;
}

/* TABLO */
table{
  width:100%;
  border-collapse:collapse;
}

th{
  text-align:left;
  padding:12px;
  font-size:.75rem;
  letter-spacing:.5px;
  text-transform:uppercase;
  opacity:.7;
}

td{
  padding:14px;
  border-top:1px solid rgba(255,255,255,.06);
}

tr{
  transition:.3s;
}

tr:hover{
  background:rgba(255,255,255,.04);
}

.link{
  color:#00ffe0;
  text-decoration:none;
  font-weight:700;
}
</style>
